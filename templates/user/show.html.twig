{% extends 'base.html.twig' %}
{% block body %}
    <div id="info" class="row">
        <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
            <span>{{user.email}}</span>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') and app.user!=user %}
                {% if isFriend %}
                    <a class="btn btn-danger" href="{{ path('friend_remove',{id:user.id})}}">Remove friend</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('friend_add',{id:user.id})}}">Add friend</a>
                {% endif %}
            {% endif %}
            {%for entry in movies %}
                <div class="row">
                    <div class="col-md-6"><a href="{{ path('movie_show',{id:entry.movie.id,name:entry.movie.title}) }}">Title  : {{entry.movie.title}}</a></div>
                    <div class="col-md-6">Rating : {{entry.rating.value}}</div>
                </div>
            {% endfor %}          
        </div>
        <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">

        </div>
    </div>
    <style>
        #info{
            color:#EEE;
        }
    </style>
{% endblock %}